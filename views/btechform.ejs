<%- include('./header.ejs') %>

   
            <div class="container-xl">
              <div class="card border-0 shadow-lg  m-5">
                <div class="row">
                  <div class="col-sm-10 col-md-5 col-lg-5">
                      <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
                          <div class="carousel-inner">
                              <div class="carousel-item active">
                                  <img src="https://mits-admission-portal.onrender.com/assets/images/registration_form1.jpg" class="d-block w-100" style="height: 632px;"
                                      alt="...">
                              </div>
                              <div class="carousel-item">
                                  <img src="https://mits-admission-portal.onrender.com/assets/images/registration_form2.jpg" class="d-block w-100" style="height: 632px;"
                                      alt="...">
                              </div>
                              <div class="carousel-item">
                                  <img src="https://mits-admission-portal.onrender.com/assets/images/registration_form3.jpg" class="d-block w-100" style="height: 632px;"
                                      alt="...">
                              </div>
                          </div>

                      </div>
                  </div>
                  <div class="col-sm-12 col-md-6 col-lg-6 p-4">
                    <h1 class="text-center mb-2">Admission Form </h1>
                      <form action="/btechFormInsert" method="post">
                          <div class="input-group mb-2">
                              <span class="input-group-text" id="inputGroup-sizing-default">User Name</span>
                              <input type="text" name="userName" value="<%= name %> " class="form-control" >
                            </div>
                          <div class="input-group mb-2">
                              <span class="input-group-text" id="basic-addon1">@</span>
                              <input type="email" name="email" value="<%= e %>" class="form-control" placeholder="abc@gmail.com" >
                            </div>
                            <div class="input-group mb-2">
                              <span class="input-group-text" id="inputGroup-sizing-default">Mobile No</span>
                              <input type="tel" name="mobileNo" class="form-control" required>
                            </div>
                            <div class="input-group mb-2">
                              <span class="input-group-text" id="inputGroup-sizing-default">DOB</span>
                              <input type="date" name="dob" class="form-control" required>
                            </div>
                          <div class="mb-2 ">
                              <label class="mb-2">Gender</label>
                              <br>
                              <input type="radio" name="gender" value="male">&nbsp;Male
                              <input type="radio" name="gender" value="female">&nbsp;Female
                              <br>
                          </div>
                          <div class="input-group mb-2">
                              <span class="input-group-text" id="inputGroup-sizing-default">Address</span>
                              <input type="text" name="address" class="form-control" required>
                            </div>
                          <div class="input-group mb-2">
                              <label class="input-group-text" for="inputGroupSelect01">College</label>
                              <select class="form-select" name="college" id="" required>
                                <option selected>Choose...</option>
                                <option value="Bhagalpur Univercity">Bhagalpur Univercity</option>
                                <option value="IIT Bambey">IIT Bambey</option>
                                <option value="IIT kota">IIT kota</option>
                              </select>
                            </div>
                            <div class="input-group mb-2">
                              <label class="input-group-text" for="inputGroupSelect01">Course</label>
                              <select class="form-select" name="course" id="" required>
                                <option selected>Choose...</option>
                                <option value="B.Tech">B.Tech</option>
                              </select>
                            </div>
                            <div class="input-group mb-2">
                              <label class="input-group-text" for="inputGroupSelect01">Branch</label>
                              <select class="form-select" name="branch" id="" required>
                                <option selected>Choose...</option>
                                <option value="IT">IT</option>
                                <option value="CS">CS</option>
                                <option value="Electronic">Electronic</option>
                              </select>
                            </div>
                            <div class="form-group text-center">
                              <button type="submit" class="btn btn-lg btn-block px-2" style="background: #12587a; color:#ffff;">Register</button>
                          </div>
                      </form>
                  </div>
              </div>
              </div>
               
            </div>
       
 <%- include('./footer.ejs') %>
